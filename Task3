

using System;

public class HelloWorld
{
    public static void Main(string[] args)
    {   
        
       Task3("Hello World Hi My Name Is");
    }
    
    static void Task3(string x){
        bool printChar = true;
        for(int i = 0; i < x.Length; i++){
            if(printChar && x[i] != ' ') Console.Write(x[i]+", ");
            if (x[i] == ' '){
                printChar = true;
            }
            else printChar = false;
        }
    }
}
